<%= form_for(@question) do |f| %>
<% if @question.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@question.errors.count, 'error') %>
    prohibited this question from beign saved:
  </h2>
  <ul>
    <% @question.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
        <% end %>
  </ul>
</div>
<% end %>

<div class="field">
  <%= f.label :text %>
  <%= f.text_area :text, :size => '60x5' %>
</div>
<div class="actions">
  <%= f.submit %>
</div>
<% end %>